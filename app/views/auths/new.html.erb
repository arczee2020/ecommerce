<div class="container bg-white pb-5">
  <div class="row d-flex justify-content-start align-items-center mt-sm-5">
    <div class="col-lg-5 col-10">
      <div id="circle"></div>
      <div class="pb-5">
        <img src="https://img.freepik.com/free-vector/authentication-concept-illustration_114360-2168.jpg?size=338&ext=jpg&ga=GA1.2.777073396.1599399655" alt="">
      </div>
    </div>
    <div class="col-lg-4 offset-lg-2 col-md-6 offset-md-3">
      <div class="pt-4">
        <h6><span class="fa fa-superpowers text-primary px-md-2"></span>Ecommerce Website</h6>
      </div>
      <div class="mt-3 mt-md-5">
        <h5>Sign Up to your Account</h5>
        <% if @user.errors.present? %>
          <ul class="alert alert-danger error_message">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="pt-4">
          <%= form_for(@user, url: auths_path, method: :post) do |f| %>
            <div class="d-flex flex-column pb-3">
              <label for="email">Full Name</label>
              <%= f.text_field :name, class: 'border-bottom border-primary' %>
            </div>
            <div class="d-flex flex-column pb-3">
              <label for="email">Email Address</label>
              <%= f.email_field :email, class: 'border-bottom border-primary' %>
            </div>
            <div class="d-flex flex-column pb-3">
              <label for="password">Password</label>
              <%= f.password_field :password, class: 'border-bottom border-primary' %>
            </div>
            <div class="d-flex flex-column pb-3">
              <label for="password">Confirm Password</label>
              <%= f.password_field :password_confirmation, class: 'border-bottom border-primary' %>
            </div>
            <div class="d-flex flex-column pb-3">
              <%= submit_tag 'Log In', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>