<section class="banner-bottom py-5">
  <div class="container py-md-5">
    <div class="col-12 col-sm-12">
      <h1> Product Details</h1>
    </div>
    <div class="left-ads-display wthree">
      <div class="row">
        <div class="desc1-left col-md-6">
          <%= image_tag url_for(@product.image) , class:  "img-fluid"%>
        </div>
        <div class="desc1-right col-md-6 pl-lg-3">
          <h3><%= @product.title %></h3>
          <h5>Price: <%= number_to_currency(@product.price) %></h5>
        </div>

      </div>
      <div class="row sub-para-w3pvt my-5">
        <h3 class="shop-sing"><%= @product.title %></h3>
        <p><%= @product.description %>/p>
        <p class="mt-3 italic-blue"><%= @product.product_description %></p>
      </div>
      <h3 class="title-wthree-single my-lg-5 my-4 text-left">Featured Products</h3>
      <div class="row shop-wthree-info text-center">
        <% @products_row.each do |product| %>
          <div class="col-md-3 shop-info-grid text-center mt-4">
            <div class="product-shoe-info shoe">
              <div class="men-thumb-item">
                <%= image_tag url_for(product.image) , class:  "img-fluid"%>
              </div>
              <div class="item-info-product">
                <h4>
                  <a href="single.html"><%= product.title %></a>
                </h4>

                <div class="product_price">
                  <div class="grid-price">
                    <span class="money"><%= number_to_currency(product.price) %></span>
                  </div>
                </div>
                <div class="col-12 col-sm-12">
                  <%= link_to 'Show', ecommerce_path(product.id) , class: 'btn btn-block btn-success' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
