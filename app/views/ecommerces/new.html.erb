<div class="container-fluid">
  <div class="col-12 ">
    <h1> Add Product Details</h1>
    <% if @product.errors.present? %>
      <ul class="alert alert-danger error_message">
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_for(@product, url: ecommerces_path, class: 'mt-5 mb-5') do |f| %>
      <div class="form-group" >
        <label style="color:white; margin-top: 20px !important;" >Title</label>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter the title', style: "margin-top: 10px;!important;" %>
      </div>
      <div class="form-group">
        <label style="color:white;">Product Description</label>
        <%= f.text_area :product_description, class: 'form-control', placeholder: 'Enter the Description' , style: "margin-top: 10px;!important;"%>
      </div>
      <div class="form-group">
        <label style="color:white;">Description</label>
        <%= f.text_area :description, class: 'form-control', placeholder: 'Enter the Description', style: "margin-top: 10px;!important;" %>
      </div>
      <div class="form-group">
        <label style="color:white;">Price</label>
        <%= f.number_field :price, class: 'form-control', placeholder: 'Enter the Price', style: "margin-top: 10px;!important;" %>
      </div>
      <div class="form-group">
        <label style="color:white;">Image</label>
        <%= f.file_field :image, class: 'form-control', placeholder: 'Upload Image', style: "margin-top: 10px;!important;" %>
      </div>
      <div class="offset-4 col-4 " style="margin-top: 10px;!important; margin-bottom: 40px;!important;">
         <%= f.submit "Add Product", class: 'btn btn-success', style: 'width:100% !important' %>
      </div>
    <% end %>
  </div>
</div>